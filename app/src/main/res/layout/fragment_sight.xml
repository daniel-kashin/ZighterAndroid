<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <View
        android:id="@+id/тянулька"
        android:layout_width="35dp"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:background="@color/secondaryText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sight_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="25dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="@color/primaryText"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/sight_distance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/тянулька" />

    <TextView
        android:id="@+id/sight_distance"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingEnd="20dp"
        android:paddingStart="0dp"
        android:textSize="13sp"
        android:gravity="center"
        tools:text="25km"
        app:layout_constraintBottom_toBottomOf="@+id/sight_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sight_name" />

    <ImageView
        android:id="@+id/media_thumbnail_background"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightHintText"
        app:layout_constraintTop_toBottomOf="@+id/sight_name" />

    <ImageView
        android:id="@+id/media_count_circle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/white_circle"
        app:layout_constraintBottom_toBottomOf="@id/media_thumbnail_background"
        app:layout_constraintEnd_toEndOf="@id/media_thumbnail_background"
        app:layout_constraintStart_toStartOf="@id/media_thumbnail_background"
        app:layout_constraintTop_toTopOf="@id/media_thumbnail_background" />

    <TextView
        android:id="@+id/media_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/primaryText"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/media_thumbnail_background"
        app:layout_constraintEnd_toEndOf="@id/media_thumbnail_background"
        app:layout_constraintStart_toStartOf="@id/media_thumbnail_background"
        app:layout_constraintTop_toTopOf="@id/media_thumbnail_background"
        tools:text="15\nmedia" />

    <TextView
        android:id="@+id/sight_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/media_thumbnail_background" />

</android.support.constraint.ConstraintLayout>